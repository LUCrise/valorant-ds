<%= render 'agents/agents_name', agents: @agents %>

<p><%= @agent.name %></p>
<p><%= @agent.role %></p>

<p><%= image_tag @agent.image.url if @agent.image? %></p>

<!--ここより下がスキル名とその説明-->

<div class = "skill1">
  <ul>
    <li class = "skill1_name"><%= @agent.skill1_name %></li>
    <li class = "skill1_detail"><%= @agent.skill1_detail %></li>
  </ul>
</div>

<div class = "skill2">
  <ul>
    <li class = "skill2_name"><%= @agent.skill2_name %></li>
    <li class = "skill2_detail"><%= @agent.skill2_detail %></li>
  </ul>
</div>

<div class = "skill3">
  <ul>
    <li class = "skill3_name"><%= @agent.skill3_name %></li>
    <li class = "skill3_detail"><%= @agent.skill3_detail %></li>
  </ul>
</div>

<div class = "skill4">
  <ul>
    <li class = "skill4_name"><%= @agent.skill4_name %></li>
    <li class = "skill4_detail"><%= @agent.skill4_detail %></li>
  </ul>
</div>

<!--ここより下に詳細説明の投稿が入る-->

<p>スキルに関する詳細情報</p>

<ul>
  <% @posts.each do |post| %>
    <li><%= post.content %>
      <% if current_user.admin? %>
        <%= link_to '削除', agent_post_path(@agent,post), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user.admin? %>
  <%= link_to '詳細の新規作成', new_agent_post_path(agent_id:@agent.id) %>
<% end %>
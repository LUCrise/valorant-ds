<div>
  <h1>ログイン</h1>
</div>

<div>
  <div>

    <%= form_with(url: login_path, scope: :session) do |f| %>

      <div>
        <%= f.label :email, 'Emailアドレス' %>
        <%= f.email_field :email%>
      </div>

      <div>
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password%>
      </div>

      <%= f.submit 'ログイン'%>
    <% end %>

    <p><%= link_to '新規ユーザー登録はこちら', signup_path %></p>
  </div>
</div>
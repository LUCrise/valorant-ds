<div class = "login-page">
  
  <div class = "login-title">
    <h1>ログイン</h1>
  </div>
  
  <div class = "form">
  
    <%= form_with(url: login_path, scope: :session) do |f| %>
  
      <div class = "mail">
        <%= f.label :email, 'Emailアドレス' %>
        <%= f.email_field :email%>
      </div>
  
      <div class = "password">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
      </div>
  
      <%= f.submit 'ログイン'%>
    <% end %>
  
    <p class = "new-user"><%= link_to '新規ユーザー登録はこちら', signup_path %></p>
  </div>
</div>